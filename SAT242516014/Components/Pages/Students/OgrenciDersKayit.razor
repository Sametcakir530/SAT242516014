@page "/OgrenciDersKayit"
@attribute [Authorize(Roles = "Admin,User")]

@using System.Reflection
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using System.Text.Json
@using MyDbModels
@using Attributes
@using MyEnums
@using Extensions
@using Providers

@* --- Namespace Tanımları --- *@
@using SAT242516014.Filtering
@using SAT242516014.Components
@using SAT242516014.Models.MyEnums

@inject IMyDbModel<Model> _myDbModel
@inject IMyDbModel_Provider _myDbModel_Provider
@inject IJSRuntime JS
@inject LocalizerService<MyResource> _localizer

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-3">
        <h1 class="text-danger fw-bold"><i class="fas fa-file-signature"></i> Öğrenci Ders Kayıt İşlemleri</h1>
    </div>
    <hr />

    @if (_myDbModel != null)
    {
        @* --- EKLEME / GÜNCELLEME / SİLME FORMU --- *@
        @if (new[] { Operations.Add, Operations.Update, Operations.Remove, Operations.Detail }.Contains(_operation))
        {
            <div class="card shadow border-0 mb-4" style="max-width: 800px;">
                <div class="card-header bg-@_operation.Color() text-white">
                    <h4 class="m-0">@(_operation.Description())</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @* 1. ÖĞRENCİ SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Öğrenci</label>
                            <input class="form-control" list="studentOptions" placeholder="Öğrenci ismini yazın..."
                                   value="@_selectedStudentName" @onchange="OnStudentNameChanged"
                                   disabled='@(_operation != Operations.Add)' />

                            @* Kullanıcıya Bilgi Ver *@
                            @if (_model.OgrenciId > 0)
                            {
                                <small class="text-success"><i class="fas fa-check"></i> Öğrenci Seçildi (ID: @_model.OgrenciId)</small>
                            }
                            else if (!string.IsNullOrEmpty(_selectedStudentName))
                            {
                                <small class="text-danger"><i class="fas fa-times"></i> Öğrenci Bulunamadı!</small>
                            }

                            <datalist id="studentOptions">
                                @foreach (var student in _studentList)
                                {
                                    <option value="@student.AdSoyad">ID: @student.Id</option>
                                }
                            </datalist>
                        </div>

                        @* 2. DERS SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ders</label>
                            <select class="form-select" value="@_model.DersId" @onchange="OnDersChange" disabled='@(_operation != Operations.Add)'>
                                <option value="0">--- Ders Seçiniz ---</option>
                                @foreach (var ders in _dersList)
                                {
                                    <option value="@ders.Id">@ders.Kod - @ders.Ad (@ders.SinifAdi)</option>
                                }
                            </select>
                        </div>

                        @* 3. ÖĞRETMEN SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Öğretmen</label>
                            <select class="form-select" @bind="_model.OgretmenId" disabled='@(_model.DersId == 0 || _operation == Operations.Remove)'>
                                <option value="0">--- Öğretmen Seçiniz (Opsiyonel) ---</option>
                                @foreach (var ogretmen in _filteredOgretmenList)
                                {
                                    <option value="@ogretmen.Id">@ogretmen.AdSoyad</option>
                                }
                            </select>
                            @if (_model.DersId > 0 && _filteredOgretmenList.Count == 0)
                            {
                                <small class="text-muted">Bu dersi veren kayıtlı öğretmen bulunamadı.</small>
                            }
                        </div>
                        @* 4. DÖNEM GİRİŞİ *@
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Dönem</label>
                            <input type="text" class="form-control" @bind="_model.Donem" disabled='@(_operation != Operations.Add)' />
                        </div>
                        @* 5. TARİH GİRİŞİ *@
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Kayıt Tarihi</label>
                            <input type="date" class="form-control"
                                   value="@(_model.KayitTarihi?.ToString("yyyy-MM-dd"))"
                                   @onchange="@((e) => _model.KayitTarihi = DateTime.Parse(e.Value.ToString()))"
                                   disabled='@(_operation == Operations.Remove)' />
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="OnClick_Cancel">@Operations.Cancel.Description()</button>
                        @if (_operation != Operations.Detail)
                        {
                            <button class="btn btn-@_operation.Color()" @onclick="OnClick_Save">
                                <i class="fas fa-save"></i> @(_operation == Operations.Remove ? "Kaydı Sil" : "İşlemi Tamamla")
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
        @* --- LİSTELEME VE TABLO --- *@
        @if (_operation == Operations.List)
        {
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <button class="btn btn-success fw-bold" @onclick="() => OnClick_Operation(Operations.Add)">
                        <i class="fas fa-plus"></i> Yeni Kayıt Ekle
                    </button>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 150px;">İşlemler</th>
                                <th>Öğrenci</th>
                                <th>Sınıf</th>
                                <th>Ders</th>
                                <th>Öğretmen</th>
                                <th>Dönem</th>
                                <th>Kayıt Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _myDbModel.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-warning" @onclick='() => OnClick_Operation(Operations.Update, item.OgrenciId, item.DersId, item.Donem)'>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick='() => OnClick_Operation(Operations.Remove, item.OgrenciId, item.DersId, item.Donem)'>
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="fw-bold text-primary">@item.OgrenciAdSoyad</td>
                                    <td><span class="badge bg-secondary">@item.SinifAdi</span></td>
                                    <td>@item.DersAd</td>
                                    <td>@item.OgretmenAdSoyad</td>
                                    <td>@item.Donem</td>
                                    <td>@item.KayitTarihi?.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>
@code {
    string _spName_List = "sp_OgrenciDersKayit_Listele";
    string _spName_Add_Update_Remove = "sp_OgrenciDersKayit_Add_Update_Remove";

    Operations _operation = Operations.List;
    Model _model = new();

    List<StudentLookupModel> _studentList = new();
    List<DersLookupModel> _dersList = new();
    List<TeacherLookupModel> _allTeacherList = new();
    List<TeacherLookupModel> _filteredOgretmenList = new();

    string _selectedStudentName = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadLookups();
            await GetItemsAsync();
        }
    }

    async Task GetItemsAsync()
    {
        _operation = Operations.List;
        await _myDbModel_Provider.Execute<Model>(_myDbModel, _spName_List);
        StateHasChanged();
    }

    async Task LoadLookups()
    {
        // Lookup SP'leri
        _studentList = (await _myDbModel_Provider.SetItems<StudentLookupModel>("sp_Student_Lookup")).ToList();
        _dersList = (await _myDbModel_Provider.SetItems<DersLookupModel>("sp_Ders_Lookup")).ToList();

        // ÖNEMLİ DÜZELTME: Öğretmenleri listelemek için doğru SP kullanıldı.
        // Daha önceki 'sp_Ogretmen_Add_Update_Remove' prosedürü bir liste dönmez, sadece işlem sonucu döner.
        // Veritabanınızda 'sp_Ogretmen_Listele' prosedürünün olduğundan emin olun.
        _allTeacherList = (await _myDbModel_Provider.SetItems<TeacherLookupModel>("sp_Ogretmen_Listele")).ToList();
    }

    void OnDersChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int selectedDersId))
        {
            _model.DersId = selectedDersId;
            // Ekleme yaparken ders değişirse öğretmen seçimini sıfırla
            if (_operation == Operations.Add) _model.OgretmenId = 0;

            var ders = _dersList.FirstOrDefault(d => d.Id == selectedDersId);
            if (ders != null)
            {
                // DERS ADINA GÖRE FİLTRELEME
                // Veritabanındaki öğretmen tablosundaki 'Ders' sütunu ile Seçilen Dersin 'Ad' sütunu eşleştiriliyor.
                // StringComparison.OrdinalIgnoreCase ile büyük/küçük harf farkı engelleniyor.
                _filteredOgretmenList = _allTeacherList
                    .Where(o => !string.IsNullOrEmpty(o.Ders) &&
                           o.Ders.Trim().Equals(ders.Ad.Trim(), StringComparison.OrdinalIgnoreCase))
                    .ToList();

                // Eğer filtreleme sonucunda kimse yoksa, belki kullanıcı yanlış yazmıştır diye
                // listeyi boş bırakıyoruz (veya tercihen hepsini gösterebilirsiniz).
                // Kullanıcıya UI'da "Bulunamadı" mesajı göstermek için bu listeyi boş bırakmak daha mantıklı.
            }
            else
            {
                _filteredOgretmenList.Clear();
            }
            StateHasChanged(); // Arayüzü tetikle
        }
    }

    void OnStudentNameChanged(ChangeEventArgs e)
    {
        _selectedStudentName = e.Value?.ToString() ?? "";
        var student = _studentList.FirstOrDefault(s => s.AdSoyad.Equals(_selectedStudentName, StringComparison.OrdinalIgnoreCase));
        _model.OgrenciId = student?.Id ?? 0;
    }

    private void OnClick_Operation(Operations operation, int ogrenciId = 0, int dersId = 0, string donem = "")
    {
        _operation = operation;
        if (_operation == Operations.Add)
        {
            _model = new Model { KayitTarihi = DateTime.Today, Donem = DateTime.Now.Year + "-Güz" };
            _selectedStudentName = "";
            _filteredOgretmenList = new List<TeacherLookupModel>(_allTeacherList); // İlk açılışta hepsi görünsün veya boş olsun
        }
        else
        {
            var item = _myDbModel.Items.FirstOrDefault(f => f.OgrenciId == ogrenciId && f.DersId == dersId && f.Donem == donem);
            if (item != null)
            {
                _model = new Model
                {
                    OgrenciId = item.OgrenciId,
                    DersId = item.DersId,
                    OgretmenId = item.OgretmenId,
                    KayitTarihi = item.KayitTarihi,
                    Donem = item.Donem,
                    OgrenciAdSoyad = item.OgrenciAdSoyad
                };
                _selectedStudentName = item.OgrenciAdSoyad ?? "";

                // Güncelleme modunda açıldığında da o dersin öğretmenlerini filtrele
                var ders = _dersList.FirstOrDefault(d => d.Id == item.DersId);
                if (ders != null)
                {
                    _filteredOgretmenList = _allTeacherList
                        .Where(o => !string.IsNullOrEmpty(o.Ders) &&
                               o.Ders.Trim().Equals(ders.Ad.Trim(), StringComparison.OrdinalIgnoreCase))
                        .ToList();

                    // Eğer listede hiç öğretmen yoksa tümünü göster (veri hatası durumunda düzenlemeyi engellememek için)
                    if (_filteredOgretmenList.Count == 0) _filteredOgretmenList = _allTeacherList;
                }
            }
        }
    }

    async Task OnClick_Save()
    {
        if (_model.OgrenciId <= 0)
        {
            await JS.InvokeVoidAsync("alert", "Lütfen listeden geçerli bir Öğrenci seçiniz! İsmi tam ve doğru yazdığınızdan emin olun.");
            return;
        }
        if (_model.DersId <= 0)
        {
            await JS.InvokeVoidAsync("alert", "Lütfen bir Ders seçiniz.");
            return;
        }
        if (string.IsNullOrWhiteSpace(_model.Donem))
        {
            await JS.InvokeVoidAsync("alert", "Lütfen Dönem bilgisini giriniz.");
            return;
        }

        var jsonValues = JsonSerializer.Serialize(_model);

        var results = await _myDbModel_Provider.SetItems<MyDbModel_Result_KeyValue<string, bool>>(
            _spName_Add_Update_Remove,
            ("operation", _operation.ToString().ToLower()),
            ("jsonvalues", jsonValues)
        );

        var result = results?.FirstOrDefault();
        if (result != null)
        {
            await JS.InvokeVoidAsync("alert", result.Key);
            if (result.Value)
            {
                await GetItemsAsync();
            }
        }
    }

    void OnClick_Cancel() => _operation = Operations.List;

    #region Models
    public class Model
    {
        public int OgrenciId { get; set; }
        public int DersId { get; set; }
        public int OgretmenId { get; set; }
        public string? OgrenciAdSoyad { get; set; }
        public string? SinifAdi { get; set; }
        public string? DersAd { get; set; }
        public string? OgretmenAdSoyad { get; set; }
        public DateTime? KayitTarihi { get; set; }
        public string? Donem { get; set; }
    }

    class StudentLookupModel { public int Id { get; set; } public string AdSoyad { get; set; } = ""; }
    class DersLookupModel { public int Id { get; set; } public string Ad { get; set; } = ""; public string Kod { get; set; } = ""; public string SinifAdi { get; set; } = ""; }
    class TeacherLookupModel { public int Id { get; set; } public string Ad { get; set; } = ""; public string Soyad { get; set; } = ""; public string Ders { get; set; } = ""; public string AdSoyad => $"{Ad} {Soyad}"; }
    #endregion
}