@page "/OgrenciDersKayit"
@attribute [Authorize(Roles = "Admin,User")]

@using System.Reflection
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using System.Text.Json
@using MyDbModels
@using Attributes
@using MyEnums
@using Extensions
@using Providers

@* --- Namespace Tanımları --- *@
@using SAT242516014.Filtering
@using SAT242516014.Components
@using SAT242516014.Models.MyEnums

@* --- ÖNEMLİ DEĞİŞİKLİK: Generic Tipi Yeni Oluşturduğumuz Class Yaptık --- *@
@using M = SAT242516014.Filtering.OgrenciDersKayit

@inject IMyDbModel<M> _myDbModel
@inject IMyDbModel_Provider _myDbModel_Provider
@inject IJSRuntime JS
@inject LocalizerService<MyResource> _localizer

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-3">
        <h1 class="text-danger fw-bold"><i class="fas fa-file-signature"></i> Öğrenci Ders Kayıt İşlemleri</h1>
    </div>
    <hr />

    @if (_myDbModel != null)
    {
        @* --- EKLEME / GÜNCELLEME / SİLME FORMU --- *@
        @if (new[] { Operations.Add, Operations.Update, Operations.Remove, Operations.Detail }.Contains(_operation))
        {
            <div class="card shadow border-0 mb-4" style="max-width: 800px;">
                <div class="card-header bg-@_operation.Color() text-white">
                    <h4 class="m-0">@(_operation.Description())</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @* 1. ÖĞRENCİ SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Öğrenci</label>
                            @* Not: Filtreleme class'ında OgrenciAdSoyad property'si var *@
                            <input class="form-control" list="studentOptions" placeholder="Öğrenci ismini yazın..."
                                   value="@_selectedStudentName" @onchange="OnStudentNameChanged"
                                   disabled='@(_operation != Operations.Add)' />

                            @if (_model.OgrenciId > 0)
                            {
                                <small class="text-success"><i class="fas fa-check"></i> Seçildi (ID: @_model.OgrenciId)</small>
                            }
                            else if (!string.IsNullOrEmpty(_selectedStudentName))
                            {
                                <small class="text-danger"><i class="fas fa-times"></i> Öğrenci Bulunamadı!</small>
                            }

                            <datalist id="studentOptions">
                                @foreach (var student in _studentList)
                                {
                                    <option value="@student.AdSoyad">ID: @student.Id</option>
                                }
                            </datalist>
                        </div>

                        @* 2. DERS SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ders</label>
                            <select class="form-select" value="@_model.DersId" @onchange="OnDersChange" disabled='@(_operation != Operations.Add)'>
                                <option value="0">--- Ders Seçiniz ---</option>
                                @foreach (var ders in _dersList)
                                {
                                    <option value="@ders.Id">@ders.Kod - @ders.Ad (@ders.SinifAdi)</option>
                                }
                            </select>
                        </div>

                        @* 3. ÖĞRETMEN SEÇİMİ *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Öğretmen</label>
                            <select class="form-select" @bind="_model.OgretmenId" disabled='@(_model.DersId == 0 || _operation == Operations.Remove)'>
                                <option value="0">--- Öğretmen Seçiniz (Opsiyonel) ---</option>
                                @foreach (var ogretmen in _filteredOgretmenList)
                                {
                                    <option value="@ogretmen.Id">@ogretmen.AdSoyad</option>
                                }
                            </select>
                            @if (_model.DersId > 0 && _filteredOgretmenList.Count == 0)
                            {
                                <small class="text-muted">Bu dersi veren kayıtlı öğretmen bulunamadı.</small>
                            }
                        </div>

                        @* 4. DÖNEM GİRİŞİ *@
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Dönem</label>
                            <input type="text" class="form-control" @bind="_model.Donem" disabled='@(_operation != Operations.Add)' />
                        </div>

                        @* 5. TARİH GİRİŞİ *@
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Kayıt Tarihi</label>
                            <input type="date" class="form-control"
                                   value="@(_model.KayitTarihi?.ToString("yyyy-MM-dd"))"
                                   @onchange="@((e) => _model.KayitTarihi = DateTime.Parse(e.Value.ToString()))"
                                   disabled='@(_operation == Operations.Remove)' />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-secondary" @onclick="OnClick_Cancel">@Operations.Cancel.Description()</button>
                        @if (_operation != Operations.Detail)
                        {
                            <button class="btn btn-@_operation.Color()" @onclick="OnClick_Save">
                                <i class="fas fa-save"></i> @(_operation == Operations.Remove ? "Kaydı Sil" : "İşlemi Tamamla")
                            </button>
                        }
                    </div>
                </div>
            </div>
        }

        @* --- LİSTELEME VE TABLO --- *@
        @if (_operation == Operations.List)
        {
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between mb-3">
                        <button class="btn btn-success fw-bold" @onclick="() => OnClick_Operation(Operations.Add)">
                            <i class="fas fa-plus"></i> Yeni Kayıt Ekle
                        </button>
                    </div>

                    @* --- SAYFALAMA VE SIRALAMA KONTROLLERİ --- *@
                    <div class="row g-2 align-items-center">
                        <div class="col-md-2">
                            <input class="form-control text-center fw-bold" readonly
                                   value="@(TotalRecordCount == 0 ? "0 - 0 / (0)" : $"{(PageNumber - 1) * PageSize + 1} - {Math.Min(TotalRecordCount, PageNumber * PageSize)} / ({TotalRecordCount})")" />
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" value="@OrderBy" @onchange="e => OnChange_OrderBy(e.Value)">
                                @foreach (var item in _sortingOptions)
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" value="@PageSize" @onchange="e => OnChange_PageSize(e.Value)">
                                @foreach (var ps in new[] { 5, 10, 20, 50, 100, int.MaxValue })
                                {
                                    <option value="@ps">@((ps == int.MaxValue ? "∞" : ps.ToString()))</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            @if (TotalRecordCount > 0 && TotalPageCount > 1)
                            {
                                <ul class="pagination justify-content-end m-0">
                                    <li class="page-item @(PageNumber == 1 ? "disabled" : "")"><button class="page-link" @onclick="PrevPage">@("<")</button></li>
                                    @for (var pn = Math.Max(1, PageNumber - 2); pn <= Math.Min(TotalPageCount, PageNumber + 2); pn++)
                                    {
                                        var pnx = pn;
                                        <li class="page-item @(pnx == PageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pnx)">@pnx</button>
                                        </li>
                                    }
                                    <li class="page-item @(PageNumber == TotalPageCount ? "disabled" : "")"><button class="page-link" @onclick="NextPage">@(">")</button></li>
                                </ul>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 150px;">İşlemler</th>
                                <th>Öğrenci</th>
                                <th>Sınıf</th>
                                <th>Ders</th>
                                <th>Öğretmen</th>
                                <th>Dönem</th>
                                <th>Kayıt Tarihi</th>
                            </tr>
                            <tr>
                                <th>
                                    <button class="btn btn-sm btn-outline-warning w-100" @onclick="() => OnChange_Filter_Reset()">
                                        <i class="fas fa-filter"></i> Temizle
                                    </button>
                                </th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Ara..." value="@Parameter_GetValue("OgrenciAdSoyad")" @onchange='(e) => OnChange_Filter("OgrenciAdSoyad", e.Value)' /></th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Ara..." value="@Parameter_GetValue("SinifAdi")" @onchange='(e) => OnChange_Filter("SinifAdi", e.Value)' /></th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Ara..." value="@Parameter_GetValue("DersAd")" @onchange='(e) => OnChange_Filter("DersAd", e.Value)' /></th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Ara..." value="@Parameter_GetValue("OgretmenAdSoyad")" @onchange='(e) => OnChange_Filter("OgretmenAdSoyad", e.Value)' /></th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Ara..." value="@Parameter_GetValue("Donem")" @onchange='(e) => OnChange_Filter("Donem", e.Value)' /></th>
                                <th><input type="text" class="form-control form-control-sm" placeholder="Yıl-Ay-Gün" value="@Parameter_GetValue("KayitTarihi")" @onchange='(e) => OnChange_Filter("KayitTarihi", e.Value)' /></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in _myDbModel.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-warning" @onclick='() => OnClick_Operation(Operations.Update, item.OgrenciId, item.DersId, item.Donem)'>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick='() => OnClick_Operation(Operations.Remove, item.OgrenciId, item.DersId, item.Donem)'>
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                    @* M class'ındaki property isimlerini kullanıyoruz *@
                                    <td class="fw-bold text-primary">@item.OgrenciAdSoyad</td>
                                    <td><span class="badge bg-secondary">@item.SinifAdi</span></td>
                                    <td>@item.DersAd</td>
                                    <td>@item.OgretmenAdSoyad</td>
                                    <td>@item.Donem</td>
                                    <td>@item.KayitTarihi?.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>

@code {
    string _spName_List = "sp_OgrenciDersKayit_Listele";
    string _spName_Add_Update_Remove = "sp_OgrenciDersKayit_Add_Update_Remove";

    Operations _operation = Operations.List;
    M _model = new(); // Yeni Filtering Class'ını kullanıyor

    List<StudentLookupModel> _studentList = new();
    List<DersLookupModel> _dersList = new();
    List<TeacherLookupModel> _allTeacherList = new();
    List<TeacherLookupModel> _filteredOgretmenList = new();

    string _selectedStudentName = string.Empty;

    // --- SIRALAMA SEÇENEKLERİ ---
    private Dictionary<string, string> _sortingOptions = new()
    {
        { "KayitTarihi desc", "Tarih (Yeni -> Eski)" },
        { "KayitTarihi asc", "Tarih (Eski -> Yeni)" },
        { "OgrenciAdSoyad asc", "Öğrenci Adı (A-Z)" },
        { "OgrenciAdSoyad desc", "Öğrenci Adı (Z-A)" },
        { "DersAd asc", "Ders Adı (A-Z)" }
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _myDbModel.Parameters.OrderBy = "KayitTarihi desc";
            if (_myDbModel.Parameters.PageNumber <= 0) _myDbModel.Parameters.PageNumber = 1;
            if (_myDbModel.Parameters.PageSize == 0) _myDbModel.Parameters.PageSize = 10;

            await LoadLookups();
            await GetItemsAsync();
        }
    }

    async Task GetItemsAsync()
    {
        _operation = Operations.List;
        await _myDbModel_Provider.Execute<M>(_myDbModel, _spName_List);
        StateHasChanged();
    }

    private async void GetItems() => await GetItemsAsync();

    async Task LoadLookups()
    {
        _studentList = (await _myDbModel_Provider.SetItems<StudentLookupModel>("sp_Student_Lookup")).ToList();
        _dersList = (await _myDbModel_Provider.SetItems<DersLookupModel>("sp_Ders_Lookup")).ToList();
        _allTeacherList = (await _myDbModel_Provider.SetItems<TeacherLookupModel>("sp_Ogretmen_Listele")).ToList();
    }

    #region Pagination, Sorting, Filtering Logic
    private int TotalRecordCount => _myDbModel.Parameters.TotalRecordCount;
    private int TotalPageCount => _myDbModel.Parameters.TotalPageCount;
    public string OrderBy { get => _myDbModel.Parameters.OrderBy; set { _myDbModel.Parameters.OrderBy = value; GetItems(); } }
    private int PageSize { get => _myDbModel.Parameters.PageSize; set { _myDbModel.Parameters.PageSize = value; GetItems(); } }
    private int PageNumber { get => _myDbModel.Parameters.PageNumber; set { _myDbModel.Parameters.PageNumber = value; GetItems(); } }

    void OnChange_OrderBy(object value) { _myDbModel.Parameters.OrderBy = value?.ToString() ?? "KayitTarihi desc"; GetItems(); }
    void OnChange_PageSize(object value) { int.TryParse(value?.ToString(), out var ps); _myDbModel.Parameters.PageSize = ps; GetItems(); }
    void GoToPage(int page) { if (page >= 1 && page <= TotalPageCount) { PageNumber = page; } }
    void PrevPage() { if (PageNumber > 1) PageNumber--; }
    void NextPage() { if (PageNumber < TotalPageCount) PageNumber++; }

    private string? Parameter_GetValue(string name) => _myDbModel.Parameters.Where.ContainsKey(name) ? _myDbModel.Parameters.Where[name] : null;

    void OnChange_Filter(string columnName, object value)
    {
        var valStr = value?.ToString();
        if (string.IsNullOrEmpty(valStr)) _myDbModel.Parameters.Where.Remove(columnName);
        else _myDbModel.Parameters.Where[columnName] = valStr;
        _myDbModel.Parameters.PageNumber = 1;
        GetItems();
    }
    void OnChange_Filter_Reset() { _myDbModel.Parameters.Where.Clear(); GetItems(); }
    #endregion

    void OnDersChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int selectedDersId))
        {
            _model.DersId = selectedDersId;
            if (_operation == Operations.Add) _model.OgretmenId = 0;

            var ders = _dersList.FirstOrDefault(d => d.Id == selectedDersId);
            if (ders != null)
            {
                _filteredOgretmenList = _allTeacherList
                    .Where(o => !string.IsNullOrEmpty(o.Ders) &&
                           o.Ders.Trim().Equals(ders.Ad.Trim(), StringComparison.OrdinalIgnoreCase))
                    .ToList();
            }
            else { _filteredOgretmenList.Clear(); }
            StateHasChanged();
        }
    }

    void OnStudentNameChanged(ChangeEventArgs e)
    {
        _selectedStudentName = e.Value?.ToString() ?? "";
        var student = _studentList.FirstOrDefault(s => s.AdSoyad.Equals(_selectedStudentName, StringComparison.OrdinalIgnoreCase));
        _model.OgrenciId = student?.Id ?? 0;
    }

    private void OnClick_Operation(Operations operation, int ogrenciId = 0, int dersId = 0, string donem = "")
    {
        _operation = operation;
        if (_operation == Operations.Add)
        {
            _model = new M { KayitTarihi = DateTime.Today, Donem = DateTime.Now.Year + "-Güz" };
            _selectedStudentName = "";
            _filteredOgretmenList = new List<TeacherLookupModel>(_allTeacherList);
        }
        else
        {
            // _myDbModel.Items artık "M" (Filtering.OgrenciDersKayit) tipinde
            var item = _myDbModel.Items.FirstOrDefault(f => f.OgrenciId == ogrenciId && f.DersId == dersId && f.Donem == donem);
            if (item != null)
            {
                // Yeni bir kopya oluşturuyoruz ki listedeki veri hemen değişmesin
                _model = new M
                {
                    OgrenciId = item.OgrenciId,
                    DersId = item.DersId,
                    OgretmenId = item.OgretmenId,
                    KayitTarihi = item.KayitTarihi,
                    Donem = item.Donem,
                    OgrenciAdSoyad = item.OgrenciAdSoyad
                };
                _selectedStudentName = item.OgrenciAdSoyad ?? "";

                // Öğretmen filtresini ayarla
                var ders = _dersList.FirstOrDefault(d => d.Id == item.DersId);
                if (ders != null)
                {
                    _filteredOgretmenList = _allTeacherList
                        .Where(o => !string.IsNullOrEmpty(o.Ders) &&
                               o.Ders.Trim().Equals(ders.Ad.Trim(), StringComparison.OrdinalIgnoreCase))
                        .ToList();
                    if (_filteredOgretmenList.Count == 0) _filteredOgretmenList = _allTeacherList;
                }
            }
        }
    }

    async Task OnClick_Save()
    {
        if (_model.OgrenciId <= 0) { await JS.InvokeVoidAsync("alert", "Lütfen listeden geçerli bir Öğrenci seçiniz!"); return; }
        if (_model.DersId <= 0) { await JS.InvokeVoidAsync("alert", "Lütfen bir Ders seçiniz."); return; }
        if (string.IsNullOrWhiteSpace(_model.Donem)) { await JS.InvokeVoidAsync("alert", "Lütfen Dönem bilgisini giriniz."); return; }

        var jsonValues = JsonSerializer.Serialize(_model);

        // --- HATANIN DÜZELTİLDİĞİ KISIM ---
        // (string, ?) hatasını önlemek için (Key: "...", Value: (object)...) formatı kullanıldı.
        var results = await _myDbModel_Provider.SetItems<MyDbModel_Result_KeyValue<string, bool>>(
            _spName_Add_Update_Remove,
            (Key: "operation", Value: (object)_operation.ToString().ToLower()),
            (Key: "jsonvalues", Value: (object)jsonValues)
        );

        var result = results?.FirstOrDefault();
        if (result != null)
        {
            await JS.InvokeVoidAsync("alert", result.Key);
            if (result.Value) await GetItemsAsync();
        }
    }

    void OnClick_Cancel() => _operation = Operations.List;

    #region Models (Lookup Modelleri)
    // Model sınıfı kaldırıldı çünkü yukarıda using alias (M) ile Filtering namespace'indekini kullanıyoruz.
    class StudentLookupModel { public int Id { get; set; } public string AdSoyad { get; set; } = ""; }
    class DersLookupModel { public int Id { get; set; } public string Ad { get; set; } = ""; public string Kod { get; set; } = ""; public string SinifAdi { get; set; } = ""; }
    class TeacherLookupModel { public int Id { get; set; } public string Ad { get; set; } = ""; public string Soyad { get; set; } = ""; public string Ders { get; set; } = ""; public string AdSoyad => $"{Ad} {Soyad}"; }
    #endregion
}